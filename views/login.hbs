{{#if errorMessage}}
    <div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>
{{/if}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
        
            <h2><strong>Login</strong></h2>

            <hr>
            <br>
        
            <form method="post" action="/login">
                <input class="form-control" type="text" name="userName" {{#if userName}}value="{{userName}}"{{else}}placeholder="User Name"{{/if}} required><br>
                <input class="form-control" type="password" name="password" id="password" placeholder="Password" required><br>
                <input type="submit" class="btn btn-success pull-right" value="Login" /><br /><br /><br />
            </form>
        </div>
    </div>
</div>